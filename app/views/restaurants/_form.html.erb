<div class="row">
  <div class="col-sm-6 col-sm-offset-3">


    <%= simple_form_for(@restaurant) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :category %>
      <%= f.input :address %>
      <%= f.input :phone_number %>

    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary btn-block" %>

    </div>

    <% end %>
  </div>
</div>
